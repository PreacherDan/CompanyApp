@model CompanyApp.DTOs.EmployeeDTO

@{
    ViewData["Title"] = string.Format("{0} {1} - Details", Model.Name, Model.Surname);
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@Model.Name @Model.Surname - Details</h1>

<ul>
    <li>Department: @Model.Department.Name</li>
    <li>Salary: @Model.Salary</li>
    @if(Model.IsOnLeave)
    {
        <li>On Leave</li>
    }
    else
    {
        <li>Not On Leave</li>
    }
</ul>


@Html.ActionLink("Delete", "Delete", "Employees", new { id = Model.ID, actionToReturn = "index", controllerToReturn ="Employees" }, new{@class="btn btn-primary"})
